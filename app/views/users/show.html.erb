<div class="user-details">
  <h1>Detalles del Usuario</h1>

  <p>
    <strong>Nombre:</strong>
    <%= @user.first_name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>

  <% if @user.respond_to?(:username) %>
    <p>
      <strong>Nombre de Usuario:</strong>
      <%= @user.username %>
    </p>
  <% end %>

  <div class="actions">
    <%= link_to "Volver a la Lista", users_path, class: "btn btn-secondary" %>
  </div>
</div>
<%= link_to "Crear Nuevo Usuario", new_user_path, class: "btn btn-success" %>