<h1>Lista de Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "Ver", user_path(user), class: "btn btn-primary" %>
          <%= link_to "Editar", edit_user_path(user), class: "btn btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Crear Nuevo Usuario", new_user_path, class: "btn btn-success" %>